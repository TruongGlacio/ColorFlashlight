<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                />
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerColor="#FFFFFF"
                android:startColor="#000000"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                />
            <stroke
                android:width="1dp"

                />
        </shape>
    </item>

    <item>            <!-- Trạng thái bình thường khi không click -->
        <shape>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                />

            <gradient
                android:angle="90"
                android:centerX="50%"
                android:type="linear"
                android:centerColor="#FFFFFF"
                android:startColor="#000000"
                android:endColor="#000000"
                />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"

                /><!-- Thiết lập màu và độ rộng cho viền -->

            <!-- Thiết lập màu nền cho nút -->
        </shape>
    </item>

</selector>